#include <stdio.h>

int main() {
    int a, b, c, largest;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &a, &b, &c);

    // Using nested conditional operator
    largest = (a > b) ? ((a > c) ? a : c) : ((b > c) ? b : c);

    printf("%d is the largest.\n", largest);

    return 0;
}
