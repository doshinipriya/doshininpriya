#include <stdio.h>

int main() {
    double x, result = 1.0;
    int n, i;

    printf("Enter the base (x): ");
    scanf("%lf", &x);

    printf("Enter the exponent (n): ");
    scanf("%d", &n);

    if(n >= 0) {
        for(i = 1; i <= n; i++) {
            result *= x;
        }
    } else {
        // Handling negative exponent
        for(i = 1; i <= -n; i++) {
            result *= x;
        }
        result = 1.0 / result;
    }

    printf("%.2lf raised to the power %d is %.2lf\n", x, n, result);

    return 0;
}
