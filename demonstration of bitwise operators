#include <stdio.h>

int main() {
    int a = 12;       
    int b = 25;       

    printf("a = %d\n", a);
    printf("b = %d\n\n", b);

    // Bitwise AND
    printf("a & b  = %d\n", a & b);

    // Bitwise OR
    printf("a | b  = %d\n", a | b);

    // Bitwise XOR
    printf("a ^ b  = %d\n", a ^ b);

    // Bitwise NOT
    printf("~a     = %d\n", ~a);

    // Left Shift
    printf("a << 2 = %d\n", a << 2);

    // Right Shift
    printf("a >> 2 = %d\n", a >> 2);

    return 0;
}

